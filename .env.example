# === General Settings ===

# Domain used in production (e.g., yourdomain.com)
DOMAIN=localhost
# Example for testing local Traefik config
# DOMAIN=localhost.tiangolo.com

# Frontend host used in links (e.g., password reset)
FRONTEND_HOST=http://localhost:5173

# Environment type: local, staging, production
ENVIRONMENT=local

# Project Metadata
PROJECT_NAME="Task Manager App"
STACK_NAME=task-manager-app

# JWT Configuration
ALGORITHM=HS256
SECRET_KEY=your_secret_key_here

# CORS Origins (comma-separated)
BACKEND_CORS_ORIGINS=http://localhost,http://localhost:5173,https://localhost,https://localhost:5173,http://localhost.tiangolo.com

# Superuser credentials (for initial setup)
FIRST_SUPERUSER=admin@example.com
FIRST_SUPERUSER_PASSWORD=your_superuser_password_here

# === Email Settings ===

SMTP_HOST=smtp.example.com
SMTP_USER=your_email_user
SMTP_PASSWORD=your_email_password
EMAILS_FROM_EMAIL=info@example.com
SMTP_TLS=True
SMTP_SSL=False
SMTP_PORT=587

# === Database Settings ===

POSTGRES_SERVER=localhost
POSTGRES_PORT=5432
POSTGRES_DB=your_database_name
POSTGRES_USER=your_db_user
POSTGRES_PASSWORD=your_db_password

# === Sentry (Optional) ===

SENTRY_DSN=

# === Docker Images ===

DOCKER_IMAGE_BACKEND=backend
DOCKER_IMAGE_FRONTEND=frontend
